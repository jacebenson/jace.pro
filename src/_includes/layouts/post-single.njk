{% extends "base.njk" %}

{%- block seo -%}
<!--Twitter Card-->
<meta name="twitter:card" content="summary">
<meta name="twitter:site" content="@{{site.twitter}}">
<meta name="twitter:creator" content="@{{site.twitter}}">
<meta name="twitter:url" content="{{site.baseURL}}{{page.url}}">
<meta name="twitter:title" content="{{title}}">
{% if summary %}
<meta name="twitter:description" content="{{summary | striptags | truncate(196) }}">
{% else %}
<meta name="twitter:description" content="{{content | striptags | truncate(196) }}">
{% endif %}
<meta name="twitter:image" content="{{site.baseURL}}{{page.url}}{{imageName}}">
{% if imageAltText %}
<meta name="twitter:image:alt" content="{{imageAltText}}">
{% endif %}


<!--Schema-->
<link rel="author" href="{{site.baseURL}}">
<link rel="publisher" href="{{site.baseURL}}">
<meta itemprop="name" content="{{title}}">

<meta itemprop="description" content="{{content | striptags | truncate(196) }}">
<meta itemprop="image" content="{{site.baseURL}}{{page.url}}{{imageName}}">

<!-- Facebook OpenGraph -->
<!--<meta property="fb:app_id" content="{{site.FB_APP_ID}}">-->
<meta property="og:url" content="{{site.baseURL}}{{page.url}}">
<meta property="og:type" content="website">
<meta property="og:title" content="{{title}}">
<meta property="og:image" content="{{site.baseURL}}{{page.url}}{{imageName}}">
{% if summary %}
<meta property="og:description" content="{{summary | striptags | truncate(196) }}">{% else %}
<meta property="og:description" content="{{content | striptags | truncate(196) }}">
{% endif %}
<meta property="og:site_name" content="{{site.title}}">
<meta property="og:locale" content="en_US">
<meta property="article:author" content="{{site.baseURL}}">
{%- endblock -%}
{% block content %}
<div class="jumbotron text-center">

  <!-- Title -->
  <h4 class="card-title h4 pb-2"><strong>{{ title }}</strong></h4>

  <!-- Card image -->
  <div class="view overlay my-4">
    <img width="70%" class="img-fluid" data-sizes="auto" sizes="640px"
      src="{{post.url}}{{post.data.imageName}}"
      srcset="
      {{post.url}}featured-100.webp 100w,
      {{post.url}}featured-200.webp 200w,
      {{post.url}}featured-320.webp 320w,
      {{post.url}}featured-360.webp 360w,
      {{post.url}}featured-640.webp 640w,
      {{post.url}}featured-720.webp 720w,
      {{post.url}}featured-960.webp 960w,
      {{post.url}}featured-1280.webp 1280w"
      alt="{{post.url}}{{post.data.imageName}}"
    />
  </div>

  <h5 class="indigo-text h5 mb-4">{{ subtitle }}</h5>

  <p class="card-text">{{ summary }}</p>

</div>
<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-md-10">
            {{ content | safe }}
        </div>
    </div>
</div> 
{% if site.utterancesRepo %}
<script src="https://utteranc.es/client.js"
        repo="jacebenson/jace.pro"
        issue-term="pathname"
        label="comment"
        theme="github-light"
        crossorigin="anonymous"
        async >
</script>
<noscript>Please enable JavaScript to view the comments powered by Utterances.</a></noscript>
{% endif %}
{% endblock content %}